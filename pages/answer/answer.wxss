/* pages/answer/answer.wxss */
.answer .header {
  height: 80px;
  margin: 10px 16px;
  display: flex;
  /* align-items: center; */
  background: #fff;
  border-radius: 4px;
}
.answer .header .h2{
  font-size: 16px;
  height: 80px;
  display: flex;
  align-items: center;
  /* line-height: 80px; */
  color: #333;
  font-weight: bold;
  /* border-bottom: 1px solid #f6f6f6; */
  padding: 0 16px;
}
.answer .content-h2 {
  height: 38px;
  line-height: 38px;
  border-bottom: 1px solid #f6f6f6;
  color: #333;
  text-align: left;
  padding: 0 16px;
}
.answer .content {
  margin: 20px 16px;
  background: #fff;
  padding: 10px 0;
  border-radius: 4px;
  text-align: center;
} 
.answer .header .score {
  font-size: 38px;
  color: red;
}
.question-circle {
  display: inline-block;
  width: 50px;
  height: 50px;
  line-height: 50px ;
  text-align: center;
  font-size: 18px;
  border: 1px solid #0492CE;
  margin: 8px;
  background: #0492CE;
  color: #fff;
  border-radius: 50%;
}
.circle-danger {
  color: #fff;
  border: 1px solid #FE5308;
  background: #FE5308;
}