.tab-bar-item {
  height: 48px;
  /* width: 33.3%; */
  text-align: center;
  align-items: center;
  border-top: 1px solid #E4E4E4;
  flex: 1;
  display: flex;
  justify-content: center;
}
.tab-bar-item:not(:last-child) {
  border-right: 1px solid #E4E4E4;
}

.tab-bar-item-selected {
  background-color: #3A96E7;
}
