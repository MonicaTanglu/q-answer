.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  white-space: nowrap;
  /* align-items: center; */
  padding-bottom: env(safe-area-inset-bottom);
}

